<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>rentalcar-server</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- Servlet mapping -->
  <servlet>
		<servlet-name>deleteUserAction</servlet-name>
		<servlet-class>rentalcarServer.user.controller.DeleteFormAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteUserAction</servlet-name>
		<url-pattern>/deleteUser</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>joinFormAction</servlet-name>
		<servlet-class>rentalcarServer.user.controller.JoinFormAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>joinFormAction</servlet-name>
		<url-pattern>/joinFormAction</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>loginFormAction</servlet-name>
		<servlet-class>rentalcarServer.user.controller.LoginFormAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginFormAction</servlet-name>
		<url-pattern>/loginFormAction</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>logoutAction</servlet-name>
		<servlet-class>rentalcarServer.user.controller.LogoutAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logoutAction</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>updateUserFormAction</servlet-name>
		<servlet-class>rentalcarServer.user.controller.UpdateUserFormAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateUserFormAction</servlet-name>
		<url-pattern>/updateUserFormAction</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>findUserAction</servlet-name>
		<servlet-class>rentalcarServer.user.controller.FindUserAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>findUserAction</servlet-name>
		<url-pattern>/search/user</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>bookingFormAction</servlet-name>
		<servlet-class>rentalcarServer.user.controller.bookingFormAction</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>bookingFormAction</servlet-name>
		<url-pattern>/bookingFormAction</url-pattern>
	</servlet-mapping>
	
	
